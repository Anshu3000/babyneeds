<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/linpop1"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relcar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="24dp">

            <TextView
                android:id="@+id/item1"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="53dp"
                android:layout_marginEnd="151dp"
                android:text="@string/item"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/itemcar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minLines="1"
                android:hint="babyitem"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="20sp" />



            <EditText
                android:id="@+id/qtycared"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="qty"
                android:layout_below="@id/itemcar"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:inputType="number"
                android:layout_marginEnd="24dp" />

            <EditText
                android:id="@+id/colorcared"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="color"
                android:layout_below="@id/qtycared"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:inputType="text"
                android:layout_marginEnd="24dp" />

            <EditText
                android:id="@+id/sizecared"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="size"
                android:layout_below="@id/colorcared"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:inputType="number"
                android:layout_marginEnd="24dp" />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sizecared"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:text="Save"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                android:background="@android:color/holo_red_light"
                android:inputType="number" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>